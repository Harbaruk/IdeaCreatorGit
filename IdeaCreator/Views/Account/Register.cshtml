@model IdeaCreator.Models.RegisterModel

@{
    ViewBag.Title = "Register";
}
<div style="margin-top:70px"></div>
<h2>Реєстрація</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <h4>Реєстрація користувача</h4>
        <hr />
        @Html.ValidationSummary(false)

        <div>
            Email адрес
            <div>
                @Html.EditorFor(model => model.Email)
            </div>
        </div>

        <div>
            Нікнейм
            <div>
                @Html.EditorFor(model => model.Nickname)
            </div>
        </div>

        <div>
            Пароль
            <div>
                @Html.EditorFor(model => model.Password)
            </div>
        </div>

        <div>
            Підтвердіть пароль
            <div>
                @Html.EditorFor(model => model.PasswordConfirm)
            </div>
        </div>

        <div>
            <div>
                <input type="submit" value="Зареєструвати" />
            </div>
        </div>
    </div>
    
    <div class="form-group">
    @Html.LabelFor(m =>m.Nickname, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Nickname, new { @class = "form-control" })
    </div>
</div>
}