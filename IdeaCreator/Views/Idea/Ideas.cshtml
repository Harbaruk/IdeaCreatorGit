@using IdeaCreator.HtmlHelpers
@model IdeaCreator.Models.ViewModels.IdeaViewModel

@{
    ViewBag.Title = "Ideas";
}
<div style="margin-top:70px"></div>

<h2>Ideas</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
        <p><input class="btn btn-primary btn-lg" type="submit" value="Додати ідею" /></p>

}
@foreach (var idea in Model.Ideas)
{
    @Html.Partial("_IdeaSummary", idea)
}

<div>

   @Html.PageLinks(Model.PagingInfo, x => Url.Action("Ideas", new { page = x }))
</div>


