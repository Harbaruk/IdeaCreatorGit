<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Idea Creator - give us an idea!</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"> Add Idea!</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                 @Html.ActionLink("Idea Creator", "Ideas", "Idea", null, new { @class = "navbar-brand" })
                 @{
                     if (User.Identity.IsAuthenticated)
                     {
                         @Html.ActionLink("Account", "Edit", "Account", null, new { @class = "navbar-brand " })
                         @Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "navbar-brand navbar-right"  }) 
                     
                     }
                     else
                     {
                         @Html.ActionLink("Login", "Login", "Account", null, new { @class = "navbar-brand navbar-right" })
                     }
                 }
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="row panel">
        <div id="categories" class="col-xs-1">
        </div>
        <div></div>
        <div class="col-xs-8">
            @RenderBody()
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>